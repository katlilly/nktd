<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sound"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginBottom="331dp"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:onClick="openTetris"
        android:padding="6dp"
        android:text="@string/button_topleft"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NKTDLogo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_background_right"
        android:onClick="openG2"
        android:text="@string/button_topright"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@android:color/background_dark"
        android:textSize="35dp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_background"
        android:onClick="openG3"
        android:text="@string/button_bottomleft"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        android:typeface="serif"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/button_background_right"
        android:onClick="openG4"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        android:typeface="serif"
        android:text="@string/button_bottomright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/NKTDLogo"
        android:layout_width="217dp"
        android:layout_height="130dp"
        android:layout_marginBottom="8dp"
        android:rotation="-30"
        android:src="@drawable/nktd_logo"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/button5"
        android:layout_width="33dp"
        android:layout_height="27dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/settings"
        app:layout_constraintEnd_toStartOf="@+id/NKTDLogo"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/exit"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />
</android.support.constraint.ConstraintLayout>