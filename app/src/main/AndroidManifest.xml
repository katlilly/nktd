<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="nktd.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nktd.TetrisActivity"
            android:parentActivityName="nktd.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nktd.MainActivity" />
        </activity>
        <activity android:name="nktd.Game2Activity"
            android:parentActivityName="nktd.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nktd.MainActivity" />
        </activity>
        <activity android:name="nktd.Game3Activity"
            android:parentActivityName="nktd.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nktd.MainActivity" />
        </activity>
        <activity android:name="nktd.Game4Activity">
            android:parentActivityName="nktd.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nktd.MainActivity" />
        </activity>
    </application>

</manifest>